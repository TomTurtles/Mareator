<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<LangVersion>13</LangVersion>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Description>Use of simple yet powerful Mediator-Pattern</Description>
		<Version>0.0.7</Version>
		<Authors>Tom-Oliver Marek</Authors>
		<GenerateAppxPackageOnBuild>true</GenerateAppxPackageOnBuild>
		<IsPackable>true</IsPackable>
		<PackageId>Mareator</PackageId>
		<PackageOutputPath>C:\Users\tom-o\source\nugets</PackageOutputPath>
		<PackageTags>Mediator Simple</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/TomTurtles/mareator</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Models\" />
	</ItemGroup>

</Project>
